md-content(layout-padding layout='column' layout-align='center center')

  form(register-form ng-submit='submit()' name='registerForm')
    h1 Register

    div(layout='column')

      md-input-container(flex)
        label Email
        input(type='email' ng-model='user.email' required)

      md-input-container(flex)
        label Password
        input(type='password' ng-model='user.password' required)

    md-button.md-raised.md-primary(type='submit' ng-disabled='registerForm.$invalid') Register